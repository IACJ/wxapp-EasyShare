/* miniprogram/pages/fixshare/sofa/sofa.wxss */
.page {
  background-color: #F0FFFF;
  height: 100%;
  width: 100%;
  position: fixed;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.icon-sofa{
  background-image: url("data:image/png;base64,");
  background-size: cover;
}
.row {
  width: 100%;
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}
.row-lock {
  width: 100%;
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.btnScan{
  width: 90%;
  height: 150rpx;
  margin-bottom: 10rpx;
  text-align: center;
  line-height: 150rpx;
  font-size: 16pt;
  color: white;
  background-color: #CDC9C9;
}
.item{
  margin-top:20rpx;
  width: 200rpx;
  height: 200rpx;
  text-align: center;
  line-height: 200rpx;
}
.item-word{
  margin-top:20rpx;
  width: 150rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}
.line{
  background: #CDC9C9;
  width: 30%;
  height: 5rpx;
}
.input{
  width: 400rpx;
  height: 100rpx;
  background-color: white;
  border: 1px solid #CDC9C9;
  font-size: 20pt;
  text-align: center;
}

.chooseIdArea{
  width: 100%;
}
.controlArea{
  width: 100%;
}
