<!--pages/profile/profile.wxml-->
<view id="adduser">  
    <form bindsubmit="formSubmit" bindreset="formReset">  
         <!--昵称框-->
         <view class="section">  
            <view class="section__title">昵称:</view>  
            <view class='form-group'>  
                <input type="text" class="input-text" name="username" placeholder="{{userinfo}}" />  
            </view>      
        </view>  

        <!--年龄-->
        <view class="section section_gap">  
            <view class="section__title">年龄:</view>  
            <view class='form-group'>  
                <slider binchange="bindAgeChange" value="{{age}}" name="age" show-value ></slider>  
            </view>      
        </view> 

        <!--性别--> 
        <view class="section section_gap">  
            <view class="section__title">性别:</view>  
            <view class='form-group'>  
                <radio-group bindchange="bindSexChange" name="gender">  
                  <label><radio value="1"/>男</label>  
                  <label><radio value="0"/>女</label>  
                </radio-group>  
            </view>      
        </view>  

        <!--区域-->
        <view class="section">  
            <view class="section__title">地区:</view>  
            <view class='form-group'>  
                <picker bindchange="bindPickerChange" value="{{place}}" range="{{array}}">  
                    <view class="picker">  
                        <input type="hidden" disabled="true" name="addr" value="{{array[place]}}"/>  
                    </view>  
                </picker>  
            </view>  
        </view>  

         
          <!--是否显示-->
        <view class="section section_gap">  
            <view class="section__title">是否显示:</view>  
            <view class='form-group'>  
                 <switch bindchange="bindShowChange" value="{{show}}" name="isshow"/>  
            </view>  
        </view>  


        <!--提交 重置-->
        <view class="section btn-area">  
            <button formType="submit" class='button'>提交</button>  
            <button formType="reset" class='button'>清空</button>  
        </view>  
    </form>  
  
     <!-- 黑框提示并消失 -->  
    <toast hidden="{{toast1Hidden}}" bindchange="toast1Change">  
        {{notice_str}}  
    </toast>  


    <!-- 确认框 及 提示框 -->  
    <view class="page__bd">  
        <modal title="确认" confirm-text="确定" cancel-text="取消" hidden="{{modalHidden}}" mask bindconfirm="confirm_one" bindcancel="cancel_one">  
            确认提交么？  
        </modal>  
        <modal class="modal" hidden="{{modalHidden2}}" no-cancel bindconfirm="modalChange2" bindcancel="modalChange2">  
            <view> 提示 </view>  
            <view> 确认清空？ </view>  
        </modal>  
    </view>  
     
</view>   