/* pages/profile/profile.wxss */
.page{  
  background: #f5f5f5; 
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}  

.row{  
  width: 100%; 
  display: flex;
  flex-direction: row;
  justify-content: space-between;
} 

.inputLabel{  
  flex: 0.3;
  margin-left: 40rpx;
  margin-right: 20rpx;
}  
.inputView{  
  flex: 0.7;
  margin-left: 20rpx;
  margin-right: 40rpx;
}  

 
.input{  
  border: 1px solid #cccccc;  
  background-color: #fff;
}  

.input_disable{
  border: 1px solid #cccccc;  
  background-color: #f5f5f5;
}

.btn{  
  width: 120px;
}  
.picker{  

  border: 1px solid #cccccc;  
  background-color: #FFFFFF;  
}  

 