.page {
  border: 1rpx #f00 solid;
  margin: 20rpx;
  padding: 30rpx;

  display: flex;
  flex-direction: column;
  align-items: center;
}
.title {
  text-align: center;
  font-size: 18pt;
}
.row {
  width: 100%;
  margin-top: 30rpx;
  border: 1px solid #0f0;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}

.item{
  width: 200rpx;
  height: 200rpx;
  border: 1px solid #00f;
}

.input{
  width: 300rpx;
  font-size: 20pt;
  border-bottom: #AAA;
  z-index: 2;
}

.chooseIdArea{
  width: 100%;
}
.controlArea{
  width: 100%;
}