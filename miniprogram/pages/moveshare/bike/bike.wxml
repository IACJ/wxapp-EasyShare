<!--miniprogram/pages/moveshare/bike/bike.wxml-->

<view class='page'>
  <view class='title'> 共享单车 </view>


  <view class='chooseIdArea'wx:if='{{!id}}' >
    <view class='row'> 
      <view class='item' bindtap='scanToChoose'> 扫码选中</view>
    </view>

    <view class='row'> 
      <view class='item' bindtap='chooseId'> 编号选中</view>
      <input class='input' 
        placeholder='________' 
        type='number' 
        maxlength='8'
        value='{{id}}'
        bindinput='bindinput'></input>
    </view>
  </view>
  <view class='controlArea' wx:else>
    <view class='row'> 
        <input class='input' 
        disabled
        type='number' 
        maxlength='8'
        value='{{inputId}}'
        bindinput='bindinput'></input>
    </view>
    <view class='row'> 
      <view class='item'>开锁</view>
      <view class='item'>关锁</view>
    </view>
    <view class='row'> 
      <view class='item'>反馈故障</view>
      <view class='item' bindtap='btnStopUse'>结束使用</view>
    </view>
  </view>

  <view class='row'> 
    <view class='item'> 产品说明</view>
    <view class='item'> 使用说明</view>
    <view class='item'> 计价说明</view>
  </view>

</view>
