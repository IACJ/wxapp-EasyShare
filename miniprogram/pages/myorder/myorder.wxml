<!--miniprogram/pages/myorder/myorder.wxml-->
<view class='page'>
  <view class='title'>
   我的订单
  </view>

  <view wx:if='{{msg}}'>
    {{msg}}
  </view>
    

  <view class='orderListContainer'>
    <view class='orderListItem' 
        wx:for ='{{orderList}}' 
        wx:key='{{item._id}}'
        bindtap='tapOrder'
        data-order='{{item}}'>
      <view>
        订单id:{{item._id}}
      </view>
      <view>
        种类:{{item.thing_type}}
      </view>
      <view>
        编号:{{item.thing_numberId}}
      </view>
      <view>
        创建时间:{{item.createTimeStr}}
      </view>
      <view>
        状态:{{item.status.step}}
      </view>
    
    </view>

  </view>

</view>
