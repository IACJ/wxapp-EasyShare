/* miniprogram/pages/feedback/feedback.wxss */
page{
  background-color: #EEE9E9;
  display: flex;
  flex-direction: column;
}
 .title{
  margin : 5px;
  font-size: 12pt;
  color:#8B8989;

 }
.textarea-opinion{
  width: 85%;
  position: relative;
  background-color: #fff;
  margin: 0 auto;
  border-radius: 10rpx;
}
.textarea-phone{
  width: 85%;
  position: relative;
  background-color: #fff;
  margin: 0 auto;
  padding: 10rpx 0; 
  border-radius: 10rpx;
}
.btn-commit{
  width: 75%;
  height: 40px;
  background-color: #5F9EA0;
  color: white;
  margin-top:30px;
}
textarea{
  width: 85%;
  height: 73px;
}
.input-opinion{  
  width: 85%;
  margin: 0 10px;
  border: 1px solid #fff;  
  padding-bottom: 20px;
  font-size: 10pt;
}   
::-webkit-scrollbar{
  width:0;
  height: 0;
  color: transparent;
} 
.input-phone{  
  width: 85%;
  margin-left: 10px;
  border: 1px solid #fff;  
  font-size: 10pt;
}
.showtextnum{
  margin-top: -20px;
  margin-right: 10px;
  float: right;
  font-size: 10pt;
}
.showphonenum{
  margin-top: -20px;
  margin-right: 10px;
  float: right;
  font-size: 10pt;
}
.inputLabel{  
  flex: 0.3;
  margin-left: 40rpx;
  margin-right: 20rpx;
}  
.input-view{  
  width: 85%;
  position: relative;
  background-color: #fff;
  margin: 0 auto;
  padding: 10rpx 0; 
  border-radius: 10rpx;
}  
.picker, .input-number{  
  margin-left: 10px;
  background-color: #FFFFFF;  
  font-size: 10pt;
}  
