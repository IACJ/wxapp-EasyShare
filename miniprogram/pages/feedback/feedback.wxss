page{
  background-color: #f3f7f3;
  display: flex;
  flex-direction: column;
}
 .title{
  margin : 5px;
  font-size: 12px;
  color:#808080;

 }
.textarea-opinion{
  position: relative;
  background-color: #fff;
  margin: 0 auto;
  /* padding: 10rpx 0;  */
  border-radius: 10rpx;
}
.textarea-phone{
  position: relative;
  background-color: #fff;
  margin: 0 auto;
  padding: 10rpx 0; 
  border-radius: 10rpx;
}
.btn-commit{
  width: 90%;
  height: 40px;
  background-color: #d8f440;
  margin-top:15px;
}
textarea{
  width: 95%;
  height: 52px;
}
.input-opinion{  
  margin: 0 10px;
  border: 1px solid #fff;  
  padding-bottom: 20px;
  font-size: 15px;
}   
::-webkit-scrollbar{
  width:0;
  height: 0;
  color: transparent;
} 
.input-phone{  
  margin-left: 10px;
