/* pages/me/me.wxss */

.me{
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color:#EEE9E9;
}
.page{
  background-color:#EEE9E9;
}  
 
.me__userinfo {
  width: 100%;
  height: 270rpx; 
  background-color:#5F9EA0;
  color: white;
  display: flex;
  flex-direction: row;
  align-items: center;
  
}

.me__avatar {
  width: 120rpx;
  height: 120rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
  border-radius: 15%;
  background-color:#EEE9E9;
}

.me__detail{
  background-color:#EEE9E9;
  display: flex;
  flex-direction: column;
}

.me__item{
  
  height: 110rpx;
  background: #ffffff;
  padding-left: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 10rpx;
}
.me__nickname{
  font-size: 15pt;
}
.me__btn{
  width: 70%;
  margin-top: 80rpx;
  margin-bottom: 20rpx;
}
 