/* pages/me/me.wxss */

.me{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.page{
  background-color:#e8ede8;
}  
 
.me__userinfo {
  width: 100%;
  height: 270rpx; 
  background-color:#74c2e6;
  display: flex;
  flex-direction: row;
  align-items: center;
  
}

.me__avatar {
  width: 120rpx;
  height: 120rpx;
  /* background-color: #ffffff; */
  margin-left: 40rpx;
  margin-right: 40rpx;
  /* border: 1px solid #f00; */
  border-radius: 15%;
}

.me__detail{
  background-color:#e8ede8;
  display: flex;
  flex-direction: column;
}

.me__item{
  
  height: 110rpx;
  background: #ffffff;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 10rpx;
}
.me__nickname{
  font-size: 15pt;
}
.me__btn{
  width: 90%;
  margin-top: 180rpx;
  margin-bottom: 20rpx;
}
 